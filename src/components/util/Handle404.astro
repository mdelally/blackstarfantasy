---
const { page } = Astro.props;

const hasTrailingSlash = page.endsWith("/");
---

<section class="w-full flex flex-col items-center justify-center p-16">
  <span class="block mb-8 text-center">
    <h1 class="text-6xl font-bold">404</h1>
    <p class="text-xl">Whooops!</p>
  </span>

  <p class="text-sm text-stone-400 mb-8">
    {
      hasTrailingSlash
        ? "The page you are looking for does not exist."
        : "The page you are looking for does not exist - OR - you are missing a trailing slash!"
    }
  </p>

  {
    !hasTrailingSlash && (
      <a href={page + "/"} class="text-orange-500">
        -- try {page + "/"} --
      </a>
    )
  }

  <a href="/home/" class="text-orange-500">-- go home --</a>
</section>
